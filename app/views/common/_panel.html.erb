<%
  # Mandatory:
    # title - title on the top
    # body - block that goes in the body

  # Optional
    # class - bootstrap color class

  color_class = 'panel-primary' unless local_assigns.has_key? :color_class

%>
<div class="panel <%= color_class %>" id ="Panel-<%= title %>">
  <div class="panel-heading">
    <h1 class="panel-title">
    <%= title %>
      </h1>
  </div>
  <div class="panel-body">
    <%= yield %>
  </div>
</div>
