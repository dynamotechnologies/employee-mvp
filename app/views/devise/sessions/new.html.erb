<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">

      <div class="field">
        <div class="row">
          <div class="col-xs-1 no-padding-right"><%= f.check_box :remember_me,  :id => 'login_remember_me_checkbox' %></div>
          <div class="col-xs-11 padding-left-10"><%= f.label :remember_me , 'for'=> 'login_remember_me_checkbox' %></div>
        </div>
      </div>

    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
    <hr>
<% end %>

<%= render "devise/shared/links" %>
