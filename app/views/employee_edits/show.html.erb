<%= render "common/panel", title: 'Employee Information' do %>

<p id="notice"><%= notice %></p>

<p>Email: <%= @employee.email %></p>
<p>First Name: <%= @employee.first_name %></p>
<p>Middle Initial: <%= @employee.middle_initial %></p>
<p>Last Name: <%= @employee.last_name %></p>
<p>Admin: <%= @employee.is_admin ? "Yes" : "No" %></p>
<p>Active: <%= @employee.is_active ? "Yes" : "No" %></p>

  <div class="row">

    <div class="col-md-2">
      <%= link_to 'Edit', edit_employee_edit_path(@employee), class: "btn btn-primary" %>
      </div>

    <div class="col-md-2">
      <%= link_to 'Back', employee_edits_path, class: "btn btn-primary" %>
    </div>
  </div>

<%end%>
