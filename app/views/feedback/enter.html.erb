<h1>Feedback entry</h1>
<% if user_signed_in? %>
  <%= link_to "See your feedback", feedback_show_path %>
<% end %>

<h2>Enter feedback for someone:</h2>


<%= form_for @rating, url: feedback_create_path do |f| %>
  <% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
        <% @rating.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Your name:</label>
    <%= f.text_field :giver %>
  </div>

  <div class="field">
    <label>Who this feedback is for:</label>
    <%= f.text_field :receiver %>
  </div>

  <div class="field">
    <label>Your feedback about this person:</label>
    <%= f.text_field :desc %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
