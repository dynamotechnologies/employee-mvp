<%= render "common/panel", title: 'Leaderboard' do %>
  <div class="panel">
    <table>
      <thead>
        <th>Kudos Received</th>
        <th>Recipient</th>
      </thead>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.kudos_received %></td>
          <td><%= employee.fullname %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>
